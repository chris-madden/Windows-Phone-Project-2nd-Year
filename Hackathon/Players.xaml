                		x:Name="menuFromPlayers"
                		Height="75" 
                		Margin="0"
                		Width="75"
                		HorizontalAlignment="Left" 
                		VerticalAlignment="Top"
                		Background="Blue" 
                		BorderThickness="0"
                        Padding="0" 
                        Click="menuFromPlayers_Click">

                            <Image
                        Source="/Images/menuImage.jpg"
                        Width="50"
                        Height="50" 
                        Stretch="None">
                            </Image>

                        </Button>

                        <!--Textbock with title Players-->
                        <TextBlock
                		TextWrapping="Wrap"
                		Text="First Team"
                		HorizontalAlignment="Right" 
                		VerticalAlignment="Center"
                		Margin="100,0,0,0" 
                		FontSize="36" 
                		Foreground="White"/>

